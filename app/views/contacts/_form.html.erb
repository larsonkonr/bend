<%= form_for(@contact) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :subject %><br>
    <%= f.text_field :subject, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :message %><br>
    <%= f.text_area :message, :size => "80x10" %>
  </div>
  <div class="actions">
    <%= f.submit "Contact Us" %>
  </div>
<% end %>
